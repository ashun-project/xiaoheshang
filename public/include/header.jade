script(type="text/javascript").
    var urlSearch = window.location.href.split('search=');
    if (urlSearch.length > 1) {
        document.getElementById('search-bar').value = decodeURI(urlSearch[1]);
    }
    function getSearch () {
        var val = document.getElementById('search-bar').value;
        var wLocaltion = window.location;
        var pathname = wLocaltion.pathname;
        var host = wLocaltion.host;
        window.location.href = '/videos/search?search='+val;
    }
    function getSearchKeyup (e) {
        var event = e || window.event;
        if (event.keyCode == "13") {
            getSearch();
        }
    }
    document.querySelector('.menu-more').addEventListener('touchend', function () {
        setTimeout(function() {
            document.querySelector('.header-top').className = 'header-top show-more';
        }, 100)
        window.event? window.event.cancelBubble = true : e.stopPropagation();
    })
    document.querySelector('.close-more').addEventListener('touchend', function () {
        setTimeout(function() {
            document.querySelector('.header-top').className = 'header-top';
        }, 100)
        window.event? window.event.cancelBubble = true : e.stopPropagation();
    })
    